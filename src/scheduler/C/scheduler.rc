/*
* Scheduler resources description.
*/

#include "../../include/version.h"
#include "resource.h"

IDI_SCHEDULER           ICON    DISCARDABLE     "res/Clock2.ico"

/*
* Copyright (C) 2009 by Sayem Chaklader
*/
IDB_SCHEDULER_PICTURE   BITMAP  DISCARDABLE     "res/scheduler.bmp"


IDD_SCHEDULER DIALOGEX 0, 0, 219, 89
STYLE DS_MODALFRAME | DS_CENTER | WS_MINIMIZEBOX | WS_POPUP | WS_CAPTION | 
    WS_SYSMENU
EXSTYLE WS_EX_APPWINDOW
CAPTION "UltraDefrag Scheduler"
FONT 9, "Courier New"
BEGIN
    CONTROL         103,IDC_STATIC,"Static",SS_BITMAP | SS_CENTERIMAGE,5,8,
                    66,74
    CONTROL         "&Monday",IDC_MONDAY,"Button",BS_AUTOCHECKBOX | 
                    WS_GROUP | WS_TABSTOP,80,7,62,10
    CONTROL         "&Tuesday",IDC_TUESDAY,"Button",BS_AUTOCHECKBOX | 
                    NOT WS_TABSTOP,80,18,62,10
    CONTROL         "&Wednesday",IDC_WEDNESDAY,"Button",BS_AUTOCHECKBOX | 
                    NOT WS_TABSTOP,80,29,62,10
    CONTROL         "T&hursday",IDC_THURSDAY,"Button",BS_AUTOCHECKBOX | 
                    NOT WS_TABSTOP,80,40,62,10
    CONTROL         "&Friday",IDC_FRIDAY,"Button",BS_AUTOCHECKBOX | 
                    NOT WS_TABSTOP,80,51,62,10
    CONTROL         "&Saturday",IDC_SATURDAY,"Button",BS_AUTOCHECKBOX | 
                    NOT WS_TABSTOP,80,61,62,10
    CONTROL         "S&unday",IDC_SUNDAY,"Button",BS_AUTOCHECKBOX | 
                    NOT WS_TABSTOP,80,71,62,10
    CONTROL         "Daily",IDC_DAILY,"Button",BS_AUTORADIOBUTTON | 
                    WS_GROUP | WS_TABSTOP,148,7,63,10
    CONTROL         "Weekly",IDC_WEEKLY,"Button",BS_AUTORADIOBUTTON | 
                    NOT WS_TABSTOP,148,18,63,10
    CONTROL         "DateTimePicker1",IDC_DATETIMEPICKER1,"SysDateTimePick32",
                    DTS_RIGHTALIGN | DTS_UPDOWN | WS_GROUP | WS_TABSTOP | 0x8,
                    148,32,62,13
    COMBOBOX        IDC_DRIVES,148,53,62,30,CBS_DROPDOWNLIST | CBS_SORT | 
                    WS_VSCROLL | WS_GROUP | WS_TABSTOP
    PUSHBUTTON      "OK",IDOK,147,70,64,11,WS_GROUP | WS_TABSTOP
END

/* manifests for all targets produces make-manifests.cmd script */
1 24 "res/scheduler.manifest"

VS_VERSION_INFO VERSIONINFO
 FILEVERSION VERSION
 PRODUCTVERSION VERSION
 FILEFLAGSMASK 0x3fL
#ifdef _DEBUG
 FILEFLAGS 0x1L
#else
 FILEFLAGS 0x0L
#endif
 FILEOS 0x40004L
 FILETYPE 0x1L
 FILESUBTYPE 0x0L
BEGIN
    BLOCK "StringFileInfo"
    BEGIN
        BLOCK "040904b0"
        BEGIN
            VALUE "CompanyName", "UltraDefrag Development Team\0"
            VALUE "FileDescription", "UltraDefrag Scheduler\0"
            VALUE "FileVersion", VERSION2
            VALUE "InternalName", "udefrag-scheduler\0"
            VALUE "LegalCopyright", "Copyright © 2007-2009 UltraDefrag Development Team\0"
            VALUE "OriginalFilename", "udefrag-scheduler.exe\0"
            VALUE "ProductName", "UltraDefrag\0"
            VALUE "ProductVersion", VERSION2
        END
    END
    BLOCK "VarFileInfo"
    BEGIN
        VALUE "Translation", 0x409, 1200
    END
END
